# Configurações de Produção - Brev.ly
# Copie este arquivo para .env.production e ajuste os valores

# Ambiente
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Banco de Dados
DATABASE_URL=postgres://prod_user:prod_pass@prod-db:5432/brevly_prod
POSTGRES_USER=prod_user
POSTGRES_PASSWORD=prod_pass
POSTGRES_DB=brevly_prod

# Redis
REDIS_URL=redis://:redis_pass@redis:6379
REDIS_PASSWORD=redis_pass

# AWS S3 (para backup e uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
BACKUP_S3_BUCKET=brevly-backups

# Grafana
GRAFANA_PASSWORD=grafana_secure_password

# Segurança
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here

# CORS
CORS_ORIGIN=https://brev.ly,https://www.brev.ly

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# Monitoramento
PROMETHEUS_ENABLED=true
METRICS_ENABLED=true

# Email (para notificações)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
GOOGLE_TAG_MANAGER_ID=GTM_ID

# SEO
SITE_URL=https://brev.ly
SITE_NAME=Brev.ly
SITE_DESCRIPTION=URL shortener service
SITE_KEYWORDS=url shortener,link shortener,short links

# Performance
COMPRESSION_ENABLED=true
CACHE_CONTROL_MAX_AGE=31536000

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * * # Diariamente às 2h da manhã
BACKUP_RETENTION_DAYS=7

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000 